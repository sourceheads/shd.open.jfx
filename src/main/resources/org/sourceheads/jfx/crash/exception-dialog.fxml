<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.sourceheads.jfx.crash.ExceptionDialogController"
        spacing="12" minWidth="800" minHeight="500">
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label fx:id="laMessage"/>

    <TextArea fx:id="taStacktrace" styleClass="monospace" editable="false" VBox.vgrow="ALWAYS"/>

    <HBox alignment="TOP_RIGHT">
        <Button text="Close" onAction="#close"/>
    </HBox>
</VBox>
